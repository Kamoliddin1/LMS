<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="460.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.main.MainController">
   <children>
      <BorderPane fx:id="borderPane" prefHeight="200.0" prefWidth="200.0">
         <bottom>
            <HBox prefHeight="75.0" prefWidth="700.0" spacing="5.0" style="-fx-background-color: #705964;" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fitHeight="75.0" fitWidth="97.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../static/logo.png" />
                     </image>
                  </ImageView>
                  <Label prefHeight="70.0" prefWidth="258.0" style="-fx-text-fill: #fff;" text="LIBRARY MANAGEMENT SYSTEM" textFill="WHITE" />
               </children>
            </HBox>
         </bottom>
         <left>
            <VBox alignment="TOP_CENTER" prefHeight="290.0" prefWidth="150.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox>
                     <children>
                        <Label fx:id="first_name" text="Name" />
                        <Label fx:id="last_name" text="Last Name" />
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </HBox>
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#book" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #705964;" text="Books">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <VBox.margin>
                        <Insets bottom="5.0" top="20.0" />
                     </VBox.margin>
                  </Button>
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#studentCRUD" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #705964;" text="Student">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Button>
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#borrowedBooks" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #705964;" text="Borrowed Books">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Button>
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#issueBooks" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #705964;" text="Issue Book">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Button>
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#logout" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #705964;" text="Logout">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Button>
               </children>
            </VBox>
         </left>
      </BorderPane>
   </children>
</StackPane>
